@using MediatorDesignPattern.MediatorPattern.Results
@model List<GetAllProductQueryResult>
@{
    Layout = null; 
}
@{
    ViewData["Title"] = "Ürün Listesi";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />


<style>
    body {
        background: linear-gradient(to right, #e0eafc, #cfdef3);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .container-custom {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 80%;
        width: 80%;
    }

    .table {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        font-size: 1.1rem;
    }

        .table th {
            background: #007bff;
            color: white;
            text-align: center;
        }

    .btn-custom {
        width: 150px;
    }

    .btn-info {
        color: white;
    }

    .page-header {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        color: white;
        padding: 15px;
        text-align: center;
        border-radius: 10px;
        margin-bottom: 20px;
        font-size: 1.5rem;
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>Ürün Listesi</h2>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a href="/Product/AddProducts/" class="btn btn-info text-white btn-custom">
            <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
        </a>
    </div>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>Stok Türü</th>
                <th>Kategori</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductPrice.ToString("C")</td>
                        <td>@item.ProductStock</td>
                        <td>@item.ProductSTockType</td>
                        <td>@item.ProductCategory</td>
                        <td>
                            <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                        <td>
                            <a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success btn-sm">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </a>
                        </td>
                        <td>
                            <a href="/Product/GetProduct/@item.ProductID" class="btn btn-dark btn-sm">
                                <i class="bi bi-info-circle"></i> Detaylar
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center text-danger">
                        <strong>Henüz ürün bulunmamaktadır.</strong>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
}
