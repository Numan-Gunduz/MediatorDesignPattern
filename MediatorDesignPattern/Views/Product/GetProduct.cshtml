@model MediatorDesignPattern.MediatorPattern.Results.GetProductByIdQueryResult

@{
    ViewData["Title"] = "Ürün Detayları";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Ürün Detayları</h2>

    @if (Model != null)
    {
        <div class="card shadow-lg">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Ürün ID: @Model.ProductID</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Ürün İsmi:</strong> @Model.ProductName
                    </li>
                    <li class="list-group-item">
                        <strong>Ürün Stok Sayısı:</strong> @Model.ProductStock
                    </li>
                    <li class="list-group-item">
                        <strong>Ürün Fiyatı:</strong> @Model.ProductPrice.ToString("C")
                    </li>
                    <li class="list-group-item">
                        <strong>Ürün Kategorisi:</strong> @Model.ProductCategory
                    </li>
                    <li class="list-group-item">
                        <strong>Stok Türü:</strong> @Model.ProductSTockType
                    </li>
                </ul>
            </div>
            <div class="card-footer text-end">
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Ürün Listesine Dön
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger mt-4">
            <strong>Ürün bulunamadı.</strong>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
}
